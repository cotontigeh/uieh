{
  "name": "uieh",
  "version": "0.1.0-alpha-4",
  "description": "Ui library for react",
  "author": "Adrien E.",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/uieh.umd.cjs",
  "module": "./dist/uieh.js",
  "exports": {
    ".": {
      "import": "./dist/uieh.js",
      "require": "./dist/uieh.umd.cjs"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs"
    },
    "./hooks": {
      "import": "./dist/hooks.js",
      "require": "./dist/hooks.cjs"
    },
    "./theme/colors.theme.css": "./dist/theme/colors.theme.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cotontigeh/uieh.git"
  },
  "scripts": {
    "dev": "nodemon",
    "dev-old": "vite -c vite.docs.config.ts",
    "build": "vite build && cp -r src/theme dist/theme",
    "build-docs": "tsc -b && vite build -c vite.docs.config.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "version:patch": "bun pm version patch --no-git-tag-version",
    "version:minor": "bun pm version minor --no-git-tag-version",
    "version:major": "bun pm version major --no-git-tag-version",
    "publish:public": "bun publish --access public --no-git-checks",
    "publish:beta": "bun publish --tag beta --access public --no-git-checks"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "clsx": "^2.1.1",
    "cva": "^1.0.0-beta.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@headlessui/react": "^2.2.7",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "3.1.10",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router": "^7.8.2",
    "react-scan": "^0.4.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "@headlessui/react": "^2.0.0",
    "react": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "@headlessui/react": {
      "optional": false
    }
  },
  "resolutions": {
    "esbuild": "^0.25.9"
  }
}