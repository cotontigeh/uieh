{
  "name": "uieh",
  "version": "0.0.2-alpha",
  "description": "Ui library for react",
  "author": "Adrien E.",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/uieh.umd.cjs",
  "module": "./dist/uieh.js",
  "exports": {
    ".": {
      "import": "./dist/uieh.js",
      "require": "./dist/uieh.umd.cjs"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs"
    },
    "./hooks": {
      "import": "./dist/hooks.js",
      "require": "./dist/hooks.cjs"
    },
    "./theme/colors.theme.css": "./dist/theme/colors.theme.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cotontigeh/uieh.git"
  },
  "scripts": {
    "dev": "vite -c vite.docs.config.ts",
    "build": "tsc -b -d && vite build && cp -r src/theme dist/theme",
    "build-docs": "tsc -b && vite build -c vite.docs.config.ts",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@radix-ui/react-slot": "^1.2.3",
    "clsx": "^2.1.1",
    "cva": "^1.0.0-beta.3",
    "esbuild": "^0.25.9",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router": "^7.8.1",
    "react-scan": "^0.4.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "@headlessui/react": "^2.0.0",
    "react": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "@headlessui/react": {
      "optional": false
    }
  },
  "resolutions": {
    "esbuild": "^0.25.9"
  },
