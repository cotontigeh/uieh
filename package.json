{
  "name": "uieh-monorepo",
  "private": true,
  "scripts": {
    "dev": "bun run --filter uieh --filter docs dev",
    "build": "bun run --filter uieh build",
    "build:all": "bun run --filter '*' build",
    "lint": "bun run --filter '*' lint",
    "clean": "bun run --filter '*' clean",
    "publish:uieh": "cd packages/uieh && bun publish --access public --no-git-checks",
    "version:patch": "bun run --filter uieh version:patch",
    "version:minor": "bun run --filter uieh version:minor",
    "version:major": "bun run --filter uieh version:major"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "resolutions": {
    "ajv": "^8.12.0",
    "ajv-draft-04": "^1.0.0"
  }
}